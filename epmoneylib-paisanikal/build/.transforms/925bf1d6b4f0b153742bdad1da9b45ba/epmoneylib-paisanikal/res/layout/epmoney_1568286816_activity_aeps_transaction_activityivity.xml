<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/epmoney_1568286816white"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.AepsTransactionActivity">

    <com.google.android.material.appbar.AppBarLayout
            style="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/epmoney_1568286816white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAeps"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/epmoney_1568286816_colorPrimary"
                android:gravity="center_vertical"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/epmoney_1568286816white"
                app:layout_scrollFlags="scroll|enterAlways"
                app:title="Aeps transaction">

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabAeps"
                android:minHeight="?actionBarSize"
                app:tabGravity="fill"
                app:tabIndicatorHeight="2dp"
                android:background="@color/epmoney_1568286816_colorPrimary"
                app:tabIndicatorColor="@color/epmoney_1568286816white"
                app:tabBackground="@color/epmoney_1568286816_colorPrimary"
                app:tabMode="fixed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.easypay.epmoney.epmoneylib.utils.CustomUnswipablePagerView
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:id="@+id/viewPager"
            android:layout_marginBottom="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </com.easypay.epmoney.epmoneylib.utils.CustomUnswipablePagerView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>