<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.FingerprintScanActivity">


    <LinearLayout
            android:padding="@dimen/dim_16dp_epmoney_1568286816"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/epmoney_1568286816_colorPrimary"
            android:id="@+id/linearFingerPrintActionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:padding="8dp"
                android:src="@drawable/ic_fingerprint"
                android:id="@+id/ivFingerprint"
                android:layout_width="80dp"
                android:layout_height="80dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/epmoney_1568286816white"
                android:fontFamily="@font/muli_semibold"
                android:text="Aeps balance inquiry"
                android:id="@+id/tvServiceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="@dimen/dim_16dp_epmoney_1568286816"
                android:id="@+id/constraintAepsTransactionDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                    android:layout_marginStart="@dimen/dim_32dp_epmoney_1568286816"
                    android:layout_marginEnd="@dimen/dim_32dp_epmoney_1568286816"
                    android:background="@color/epmoney_1568286816white"
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidline"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="@dimen/dim_8dp_epmoney_1568286816"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guidline"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    android:fontFamily="@font/muli_semibold"
                    android:textColor="@color/epmoney_1568286816white"
                    android:text="@string/mobile_no"
                    android:padding="@dimen/dim_4dp_epmoney_1568286816"
                    android:id="@+id/tvMobileLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="@dimen/dim_8dp_epmoney_1568286816"
                    android:layout_marginStart="@dimen/dim_8dp_epmoney_1568286816"
                    app:layout_constraintStart_toEndOf="@id/guidline"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/epmoney_1568286816white"
                    android:text="9595952255"
                    android:padding="@dimen/dim_4dp_epmoney_1568286816"
                    android:id="@+id/tvMobileNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guidline"
                    app:layout_constraintTop_toBottomOf="@id/tvMobileNumber"
                    android:fontFamily="@font/muli_semibold"
                    android:textColor="@color/epmoney_1568286816white"
                    android:text="@string/aadhar_no"
                    android:padding="@dimen/dim_4dp_epmoney_1568286816"
                    android:id="@+id/tvAadharNumberLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:layout_marginStart="@dimen/dim_8dp_epmoney_1568286816"
                    app:layout_constraintStart_toEndOf="@id/guidline"
                    app:layout_constraintTop_toBottomOf="@id/tvMobileNumber"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/epmoney_1568286816white"
                    android:text="9595 9522 5522"
                    android:padding="@dimen/dim_4dp_epmoney_1568286816"
                    android:id="@+id/tvAadharNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guidline"
                    app:layout_constraintTop_toBottomOf="@id/tvAadharNumber"
                    android:fontFamily="@font/muli_semibold"
                    android:textColor="@color/epmoney_1568286816white"
                    android:text="@string/bank_name"
                    android:padding="@dimen/dim_4dp_epmoney_1568286816"
                    android:id="@+id/tvBankNameLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:layout_marginStart="@dimen/dim_8dp_epmoney_1568286816"
                    app:layout_constraintStart_toEndOf="@id/guidline"
                    app:layout_constraintTop_toBottomOf="@id/tvAadharNumber"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/epmoney_1568286816white"
                    android:text="ICICI bank"
                    android:padding="@dimen/dim_4dp_epmoney_1568286816"
                    android:id="@+id/tvBankName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guidline"
                    app:layout_constraintTop_toBottomOf="@id/tvBankName"
                    android:fontFamily="@font/muli_semibold"
                    android:textColor="@color/epmoney_1568286816white"
                    android:text="@string/amount"
                    android:padding="@dimen/dim_4dp_epmoney_1568286816"
                    android:id="@+id/tvAepsAmountLabel"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/dim_8dp_epmoney_1568286816"
                    app:layout_constraintStart_toEndOf="@id/guidline"
                    app:layout_constraintTop_toBottomOf="@id/tvBankName"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/epmoney_1568286816white"
                    android:text="$ 12345"
                    android:padding="@dimen/dim_4dp_epmoney_1568286816"
                    android:id="@+id/tvAepsAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageView
            android:id="@+id/ivHomeBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/dim_12dp_epmoney_1568286816"
            android:src="@drawable/ic_left_arrow_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:padding="@dimen/dim_16dp_epmoney_1568286816"
            android:fontFamily="@font/muli_semibold"
            android:text="@string/select_scanner_device"
            android:textSize="16sp"
            android:textColor="@color/epmoney_1568286816_colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/linearFingerPrintActionbar"
            android:id="@+id/tvLabelSelectScannerDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Spinner
            android:background="@drawable/draw_border_black"
            android:layout_marginStart="@dimen/dim_16dp_epmoney_1568286816"
            android:layout_marginEnd="@dimen/dim_16dp_epmoney_1568286816"
            android:padding="@dimen/dim_8dp_epmoney_1568286816"
            android:spinnerMode="dialog"
            android:entries="@array/devices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLabelSelectScannerDevice"
            android:id="@+id/spinnerDevise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </Spinner>

    <Button
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dim_32dp_epmoney_1568286816"
            app:layout_constraintTop_toBottomOf="@id/spinnerDevise"
            android:text="@string/scan_finger"
            android:textColor="@color/epmoney_1568286816white"
            android:layout_marginStart="@dimen/dim_16dp_epmoney_1568286816"
            android:layout_marginEnd="@dimen/dim_16dp_epmoney_1568286816"
            android:background="@drawable/draw_button_effect"
            android:id="@+id/btnScanFingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>