<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbakcthree"
    android:orientation="vertical"
    tools:context=".Ui.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fancy:cardElevation="6dp"
        fancy:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@mipmap/formax_round_icon"
                fancy:layout_constraintBottom_toBottomOf="parent"
                fancy:layout_constraintStart_toStartOf="parent"
                fancy:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/business_name"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="3"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                fancy:layout_constraintEnd_toEndOf="parent"
                fancy:layout_constraintStart_toEndOf="@+id/imageView33"
                fancy:layout_constraintTop_toTopOf="@+id/imageView33"
                tools:text="Formax It Solutions" />

            <TextView
                android:id="@+id/profile_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                fancy:layout_constraintBottom_toBottomOf="@+id/imageView33"
                fancy:layout_constraintEnd_toEndOf="@+id/business_name"
                fancy:layout_constraintStart_toStartOf="@+id/business_name"
                fancy:layout_constraintTop_toBottomOf="@+id/business_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/password_layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fancy:cardElevation="6dp"
        fancy:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/change_pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/pass_Iv"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/ic_lock_black_24dp"
                fancy:layout_constraintBottom_toBottomOf="parent"
                fancy:layout_constraintStart_toStartOf="parent"
                fancy:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/change_pass_text"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="3"
                android:text="Change Password"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                fancy:layout_constraintBottom_toBottomOf="parent"
                fancy:layout_constraintEnd_toEndOf="parent"
                fancy:layout_constraintStart_toEndOf="@+id/pass_Iv"
                fancy:layout_constraintTop_toTopOf="@+id/pass_Iv" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>