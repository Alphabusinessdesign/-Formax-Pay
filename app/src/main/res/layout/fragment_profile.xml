<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profile"
            type="com.rechargeweb.rechargeweb.Profile" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0ee">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Ui.ProfileFragment">

            <com.google.android.material.appbar.AppBarLayout
                style="@style/AppTheme.AppBarOverlay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bar_height"
                android:background="@drawable/log_in_background"
                android:fitsSystemWindows="true"
                app:elevation="0dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/nav_icon" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/app_bar_height"
                android:layout_marginEnd="8dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView84"
                        style="@style/TextAppearance.AppCompat.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/croissant_one"
                        android:text="Harsha Bhadra"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView85"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="(Retailer)"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toEndOf="@+id/textView84"
                        app:layout_constraintStart_toStartOf="@+id/textView84"
                        app:layout_constraintTop_toBottomOf="@+id/textView84" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_mobile_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView85">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_mobile_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="Mobile Number"
                            android:text="@{profile.mobile}"
                            android:textColor="#000000" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_pan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/textInputLayout_mobile_number"
                        app:layout_constraintStart_toStartOf="@+id/textInputLayout_mobile_number"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_mobile_number">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_pan_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="Pan Number"
                            android:text="@{profile.pan_no}"
                            android:textColor="#000000" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_gst"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/textInputLayout_pan"
                        app:layout_constraintStart_toStartOf="@+id/textInputLayout_pan"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_pan">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_gst_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="GST Number"
                            android:text="@{profile.gst_no}"
                            android:textColor="#000000" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_createDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/textInputLayout_gst"
                        app:layout_constraintStart_toStartOf="@+id/textInputLayout_gst"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_gst">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_create_date_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="Profile Created On"
                            android:text="@{profile.createdOn}"
                            android:textColor="#000000" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/textInputLayout_createDate"
                        app:layout_constraintStart_toStartOf="@+id/textInputLayout_createDate"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_createDate">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_address_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="Address"
                            android:text="@{profile.address}"
                            android:textColor="#000000" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_pincode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/textInputLayout_address"
                        app:layout_constraintStart_toStartOf="@+id/textInputLayout_address"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_address">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_pincode_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="Pincode"
                            android:text="@{profile.pincode}"
                            android:textColor="#000000" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout_state"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textInputLayout_pincode"
                        app:layout_constraintStart_toStartOf="@+id/textInputLayout_pincode"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_pincode">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_state_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:hint="State"
                            android:text="@{profile.location}"
                            android:textColor="#000000" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </ScrollView>
</layout>
